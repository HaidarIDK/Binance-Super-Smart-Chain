# BSSC Environment Configuration
# Copy this to bssc.env and update with your values

# Validator Configuration
export BSSC_VALIDATOR_URL="http://localhost:8899"

# Fee Collector (set after running setup-fee-collector.sh)
export FEE_COLLECTOR_ADDRESS=""

# ETH Bridge Program (optional, set after deploying bridge program)
export ETH_BRIDGE_PROGRAM_ID=""

# Burn Address (default is system program)
export BURN_ADDRESS="11111111111111111111111111111111"

# Node Environment
export NODE_ENV="production"

# RPC URL for services
export RPC_URL="http://localhost:8899"

# To use: source bssc.env

